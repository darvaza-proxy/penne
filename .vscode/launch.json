    "version": "0.2.0",
    "configurations": [
        {
            "name": "penne serve",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/penne",
            "args": [ "serve", "-vvv" ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "penne install",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/penne",
            "args": [ "install", "--", "-vvv" ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "penne dump",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "cmd/penne",
            "args": [ "dump", "-T", "yaml", "-vvv" ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
